{
  "name": "vite-vue-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .vue,.ts,.js",
    "lint:fix": "eslint src --ext .vue,.ts,.js --fix",
    "format": "prettier --write src/**/*.{vue,ts,js,css,scss,json}",
    "format:check": "prettier --check src/**/*.{vue,ts,js,css,scss,json}",
    "style": "stylelint src/**/*.{css,scss,vue}",
    "style:fix": "stylelint src/**/*.{css,scss,vue} --fix",
    "check-all": "npm run lint && npm run format:check && npm run style",
    "fix-all": "npm run lint:fix && npm run format && npm run style:fix",
    "pre-commit": "npm run check-all"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@primevue/themes": "^4.3.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-plugin-vue": "^10.4.0",
    "primevue": "^4.3.9",
    "vue": "^3.4.38",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@iconify/json": "^2.2.381",
    "@vitejs/plugin-vue": "^5.1.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.3",
    "unplugin-icons": "^22.2.0",
    "vite": "^5.4.2",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.1.4"
  }
}
